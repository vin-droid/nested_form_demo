<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>


<div>
<%photo = @post.album.photos.first%>
     <% if photo.image?%>
       <%= image_tag  photo.image.url%>
     <%end%>
</div>

<div>
<%video_file = @post.album.videos.first%>

   <% if video_file.video?%>
       <%= video_tag  video_file.video.url, controls: true, style: "max-width: 100%;"%>
   <%end%>
</div>






<p>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
</p>